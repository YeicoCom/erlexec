{erl_opts, [
	warnings_as_errors,
	warn_export_all
]}.

{post_hooks, [{clean, "rm -fr _build ebin priv erl_crash.dump *.json c_src/*.o c_src/*.d"}]}.

{plugins, [pc, rebar3_hex, rebar3_ex_doc]}.

{provider_hooks, [
    {pre, [
        {compile, {pc, compile}},
        {clean,   {pc, clean}}
    ]}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.

